{
  "name": "ProjectName",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "android": "react-native run-android && yarn dev:tailwind",
    "android:build": "yarn build:tailwind && cd android && ./gradlew bundleRelease",
    "android:test:release": "yarn build:tailwind && react-native run-android --variant=release",
    "ios": "react-native run-ios && yarn dev:tailwind",
    "ios:test:release": "yarn build:tailwind && react-native run-ios --configuration Release",
    "start": "react-native start",
    "start:reset": "react-native start --reset-cache",
    "test": "jest",
    "check": "prettier --check 'src/**/*.{ts,tsx}'",
    "build:tailwind": "tailwindcss --input input.css --output tailwind.css --no-autoprefixer && tailwind-rn",
    "dev:tailwind": "concurrently \"tailwindcss --input input.css --output tailwind.css --no-autoprefixer --watch\" \"tailwind-rn --watch\"",
    "assets": "npx react-native-asset"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.17.9",
    "@react-navigation/native": "^6.0.11",
    "@react-navigation/native-stack": "^6.7.0",
    "@reduxjs/toolkit": "^1.8.4",
    "@sentry/react-native": "^4.2.3",
    "i18n-js": "^4.0.2",
    "lodash": "^4.17.21",
    "react": "18.0.0",
    "react-native": "0.69.3",
    "react-native-localize": "^2.2.3",
    "react-native-safe-area-context": "^4.3.1",
    "react-native-screens": "^3.15.0",
    "react-native-svg": "^12.4.4",
    "react-redux": "^8.0.2",
    "redux-persist": "^6.0.0",
    "tailwind-rn": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.182",
    "@types/react-native": "^0.69.3",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^7.3.0",
    "eslint": "^7.32.0",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^13.0.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "react-test-renderer": "18.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "packageManager": "yarn@3.2.2",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
